<Window x:Class="r6marketplaceclient.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:r6marketplaceclient.CustomComponents"
        xmlns:local="clr-namespace:r6marketplaceclient.Windows"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Login"
        Height="390"
        Width="450"
        Background="#FF0D0D0D"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <!-- TextBox style -->
        <Style x:Key="NeonTextBoxStyle"
               TargetType="{x:Type TextBox}">
            <Setter Property="Background"
                    Value="#FF2B2E32" />
            <Setter Property="Foreground"
                    Value="#FFCECECE" />
            <Setter Property="BorderBrush"
                    Value="#00FFB7" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Padding"
                    Value="10,0,10,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FFB7"
                                                  BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Opacity="0.6" />
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="5" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#00FFB7" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00FFB7"
                                              BlurRadius="20"
                                              ShadowDepth="0"
                                              Opacity="0.8" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- PasswordBox style -->
        <Style x:Key="NeonPasswordBoxStyle"
               TargetType="{x:Type PasswordBox}">
            <Setter Property="Background"
                    Value="#FF2B2E32" />
            <Setter Property="Foreground"
                    Value="#FFCECECE" />
            <Setter Property="BorderBrush"
                    Value="#00FFB7" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Padding"
                    Value="10,0,10,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="#00FFB7"
                                                  BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Opacity="0.6" />
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="5" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused"
                         Value="True">
                    <Setter Property="BorderBrush"
                            Value="#00FFB7" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00FFB7"
                                              BlurRadius="20"
                                              ShadowDepth="0"
                                              Opacity="0.8" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Neon Button Style -->
        <Style x:Key="NeonButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#00FFB7" />
            <Setter Property="Foreground"
                    Value="#FF0D0D0D" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Height"
                    Value="50" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#00FFB7"
                                BorderThickness="1"
                                CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF00FFF9"
                                                  BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Opacity="0.8" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF00CCCC" />
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#FF555555" />
                    <Setter Property="Foreground"
                            Value="#FF999999" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Why Button Style -->
        <Style x:Key="WhyButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Red" />
            <Setter Property="Foreground"
                    Value="#FFE6E1E1" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="BorderBrush"
                    Value="Red" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect Color="Red"
                                                  BlurRadius="20"
                                                  ShadowDepth="0"
                                                  Opacity="1" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#80FF0000" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Login to R6 Marketplace"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#00FFB7"
                   Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="#00FFB7"
                                  BlurRadius="15"
                                  ShadowDepth="0"
                                  Opacity="0.8" />
            </TextBlock.Effect>
        </TextBlock>

        <!-- Email -->
        <TextBlock Text="Email"
                   Grid.Row="1"
                   Foreground="#FFCECECE"
                   FontSize="14"
                   Margin="0,0,0,5" />
        <TextBox x:Name="emailBox"
                 Grid.Row="1"
                 Style="{StaticResource NeonTextBoxStyle}"
                 TextChanged="TextBox_TextChanged"
                 Margin="0,25,0,10" />

        <!-- Password -->
        <TextBlock Text="Password"
                   Grid.Row="2"
                   Foreground="#FFCECECE"
                   FontSize="14"
                   Margin="0,0,0,5" />
        <PasswordBox x:Name="passwordBox"
                     Grid.Row="2"
                     Style="{StaticResource NeonPasswordBoxStyle}"
                     PasswordChanged="passwordBox_PasswordChanged"
                     Margin="0,25,0,10" />

        <!-- Login Button -->
        <Button x:Name="loginButton"
                Content="Login"
                Grid.Row="3"
                Style="{StaticResource NeonButtonStyle}"
                Click="loginButton_Click"
                Margin="0,20,0,10" />

        <!-- Why Button -->
        <Button x:Name="whyButton"
                Content="I don't want to give my credentials"
                Height="25"
                Grid.Row="4"
                Style="{StaticResource WhyButtonStyle}"
                Click="whyButton_Click"
                VerticalAlignment="Bottom"
                Margin="0,10,0,0" />
    </Grid>
</Window>